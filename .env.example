# ==================================================
# JOB APPLIER CONFIGURATION
# ==================================================
# Copy this file to .env and fill in your values

# ==================================================
# API KEYS (OPTIONAL - system works without them)
# ==================================================

# OpenAI API Key - enables AI-powered cover letters and resume tailoring
# Without it, uses template-based generation
OPENAI_API_KEY=your_openai_api_key_here

# ==================================================
# PLATFORM CREDENTIALS
# ==================================================

# LinkedIn - Required for Easy Apply, optional for job scraping
# Set WAIT_FOR_LOGIN=true to log in manually via browser
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password
WAIT_FOR_LOGIN=true

# Indeed - Not required, works with public search
INDEED_EMAIL=your_indeed_email

# Glassdoor - Optional, can use public search
GLASSDOOR_EMAIL=your_glassdoor_email
GLASSDOOR_PASSWORD=your_glassdoor_password

# ==================================================
# DATABASE SETTINGS
# ==================================================

DATABASE_URL=sqlite:///job_applications.db

# ==================================================
# SCRAPING SETTINGS
# ==================================================

# How often to scrape for new jobs (minutes)
SCRAPE_INTERVAL_MINUTES=60

# Minimum match score to apply (0-100)
MIN_MATCH_SCORE=60

# Only apply to jobs posted within this many days
MAX_JOB_AGE_DAYS=30

# Maximum time to spend searching (minutes)
MAX_SEARCH_TIME_MINUTES=10

# Maximum new jobs to find per session
MAX_NEW_JOBS_TO_FIND=50

# ==================================================
# AUTOMATION SETTINGS
# ==================================================

# Full automation mode (no prompts)
AUTO_MODE=false

# Legacy auto-apply setting
AUTO_APPLY_ENABLED=false

# Use Chrome profile with saved logins (RECOMMENDED)
# This lets the app use your saved LinkedIn password
# Default: true - set to false only if you have issues
USE_CHROME_PROFILE=true

# ==================================================
# ANTI-DETECTION & PROXY SETTINGS
# ==================================================

# Proxy URL for IP rotation (highly recommended!)
# Format: http://user:pass@proxy.example.com:8080
# Or: http://proxy.example.com:8080 (no auth)
PROXY_URL=

# Enable proxy rotation (requires proxy list)
ROTATE_PROXIES=false

# ==================================================
# RETRY & RATE LIMITING
# ==================================================

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Base delay between retries (seconds, doubles each attempt)
RETRY_DELAY_SECONDS=2.0

# Delay range between requests (seconds)
MIN_REQUEST_DELAY=1.0
MAX_REQUEST_DELAY=3.0

# Wait time when rate limited (minutes)
RATE_LIMIT_WAIT_MINUTES=5

# ==================================================
# LOGGING & DEBUG
# ==================================================

# Log directory
LOG_DIR=logs

# Log levels (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL_FILE=DEBUG
LOG_LEVEL_CONSOLE=INFO

# Enable debug mode (saves screenshots and HTML on failures)
DEBUG_MODE=false

# ==================================================
# BROWSER SETTINGS (Persistent Sessions)
# ==================================================

# Chrome profile directory for persistent sessions
# First run: Log in manually â†’ cookies saved here
# Subsequent runs: Auto-loads session (no login needed!)
# Leave empty for fresh session each time
CHROME_DATA_DIR=chrome_profile

# Headless mode (no visible browser window)
# Set to false for first run to log in manually
# After first successful login, set to true for automation
HEADLESS_MODE=false

# Use system Chrome profile (alternative to CHROME_DATA_DIR)
# Uses your default Chrome at ~/Library/Application Support/Google/Chrome
# WARNING: Chrome must be fully closed when using this!
USE_SYSTEM_CHROME_PROFILE=false

# ==================================================
# DASHBOARD SETTINGS
# ==================================================

DASHBOARD_PORT=5000
DASHBOARD_HOST=127.0.0.1
